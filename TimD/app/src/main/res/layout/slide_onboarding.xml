<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bluebg">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<ImageView
			android:id="@+id/img_ob"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:contentDescription="@string/slide_pos"
			android:src="@drawable/ob1"
			android:adjustViewBounds="true"
			android:scaleType="fitXY"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />


		<TextView
			android:id="@+id/title_ob"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="28dp"
			android:layout_marginRight="26dp"
			android:layout_marginLeft="26dp"
			android:text="@string/title_slide"
			android:textSize="22sp"
			android:textStyle="bold"
			android:textColor="@color/black"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/img_ob" />

		<TextView
			android:id="@+id/desc_ob"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/boardingdesc"
			android:layout_marginRight="26dp"
			android:layout_marginLeft="26dp"
			android:layout_marginTop="10dp"
			android:text="@string/desc_slide"
			android:textSize="18sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/title_ob" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
