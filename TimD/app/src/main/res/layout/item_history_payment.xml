<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/list_history_payment"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_marginVertical="8dp"
	android:layout_marginHorizontal="32dp"
	android:backgroundTint="@color/white"
	card_view:cardCornerRadius="8dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginVertical="25dp"
		android:layout_marginHorizontal="25dp">

		<TextView
			android:id="@+id/kode_transaksi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/txt_transfer"
			android:textColor="@color/textbold"
			android:textSize="14sp"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/txt_harga"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/rp_54_000"
			android:textColor="@color/purple_500"
			android:textSize="14sp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/monthly_plan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/monthly_plan_2"
			android:layout_marginTop="17dp"
			android:textColor="@color/textbold"
			android:textSize="14sp"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/kode_transaksi" />

		<TextView
			android:id="@+id/txt_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/selesai"
			android:textColor="@color/strong"
			android:textSize="14sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="@+id/txt_harga"
			app:layout_constraintStart_toStartOf="@+id/txt_harga" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
