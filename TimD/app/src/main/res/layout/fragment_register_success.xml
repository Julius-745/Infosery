<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bluebg"
	tools:context=".register.RegisterSuccessFragment">

	<ImageView
		android:id="@+id/img_rgsc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingHorizontal="86dp"
		android:layout_marginTop="110dp"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"
		android:src="@drawable/img_rgsuccess"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textView2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="37dp"
		android:layout_marginVertical="36dp"
		android:text="@string/congratulation"
		android:textColor="@color/textbold"
		android:gravity="center"
		android:textSize="22sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/img_rgsc" />

	<TextView
		android:id="@+id/txt_success"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="37dp"
		android:text="@string/congratulation"
		android:textColor="@color/texttitle"
		android:gravity="center"
		android:textSize="22sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView2" />

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/bt_login"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="32dp"
		android:layout_marginVertical="36dp"
		android:background="@drawable/bt_main"
		android:text="@string/start"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:textSize="16sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txt_success" />

</androidx.constraintlayout.widget.ConstraintLayout>
