<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bluebg"
    tools:context=".ui.subscribe.ConfirmPaymentFragment">

	<ImageView
		android:id="@+id/imageView2"
		android:layout_width="121dp"
		android:layout_height="121dp"
		android:layout_marginTop="153dp"
		android:contentDescription="@string/sukses"
		android:src="@drawable/crc_success"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txt_tittle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingHorizontal="94.5dp"
		android:layout_marginVertical="24dp"
		android:textStyle="bold"
		android:text="@string/txt_transfer"
		android:textColor="@color/purple_500"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageView2" />

	<TextView
		android:id="@+id/textView4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginVertical="24dp"
		android:gravity="center"
		android:paddingHorizontal="72dp"
		android:text="@string/permintaan_berlangganan_dengan_nomor_pesanan_or0001_telah_selesai"
		android:textColor="@color/textdesc"
		android:textSize="16sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txt_tittle" />

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/bt_mulai"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="37dp"
		android:layout_marginVertical="48dp"
		android:background="@drawable/bt_main"
		android:text="@string/konfirmasi_pembayaran"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
